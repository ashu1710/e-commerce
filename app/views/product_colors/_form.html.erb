<%= form_for( @product_color , remote: true) do |f| %>
    
    <div class="form-group">
        <%= f.label :product_color %>
        <%= f.text_field :name,class: 'form-control', required: true %>
    </div>
    
    
    <div class="form-group">
        <%= f.submit "Add",class: 'btn btn-success' %>
    </div>
<% end %>