<%= form_for( @subcategory , remote: true) do |f| %>
    <div class="form-group">
    <%= f.label :category_name %>
     <%= f.select :category_id, options_from_collection_for_select(@categories, "id", "name"), {  prompt: "Select Category" }, class: "form-control" %>
    </div>
    
    <div class="form-group">
        <%= f.label :sub_category_name %>
        <%= f.text_field :name,class: 'form-control' %>
    </div>
    
    
    <div class="form-group">
        <%= f.submit "Add",class: 'btn btn-success' %>
    </div>
<% end %>