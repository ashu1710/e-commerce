<div class="container">
    <div class="row">
        <div class="col-md-3">
        </div>

        <div class="col-md-6 login-div">
            <ul class="nav nav-tabs">
                <li>
                    <a class="btn btn-success active" data-toggle="tab" href="#Customer" >Customer</a>
                </li>

                <li>
                    <a class="btn btn-success" data-toggle="tab" href="#Seller">Seller</a>
                </li>        
            </ul>

            <div class="tab-content">
                <div id="Customer" class="tab-pane active">
                    
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <%= render "devise/shared/error_messages", resource: resource %>
                    
                        <div class="field form-group">
                            <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email", placeholder: 'Enter Email Address' %>
                        </div>
                        
                        <div class="field form-group">
                            <%= f.hidden_field :user_role, value: 'Customer' ,class: 'form-control'%>
                        </div>


                        <div class="field form-group">
                            <%= f.text_field :phone, class: 'form-control', autofocus: true, autocomplete: "email",placeholder: 'Enter Phone Number', maxlength: 10,minlenght: 10 %>
                        </div>

                        <div class="field form-group">
                            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'Enter Password ( characters minimum )' %>
                        </div>

                        <div class="field form-group">
                            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Confirmation Password' %>
                        </div>

                        <div class="actions">
                            <%= f.submit "Sign up", class: 'btn btn-success' %>
                        </div>

                        
                        <div class=text-center>
                            <%= render "devise/shared/links" %>
                        </div>

                    <% end %>
                </div>

                <div id="Seller" class="tab-pane get-margin">
                        
                     <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <%= render "devise/shared/error_messages", resource: resource %>
                    
                        <div class="row">
                            <div class="col-md-6">
                                <div class="field form-group">
                                    <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email", placeholder: 'Enter Email Address' %>
                                </div>
                                
                                <div class="field form-group">
                                    <%= f.hidden_field :user_role, value: 'Seller' ,class: 'form-control'%>
                                </div>

                                <div class="field form-group">
                                    <%= f.text_field :phone, class: 'form-control', autofocus: true, autocomplete: "email",placeholder: 'Enter Phone Number', maxlength: 10,minlenght: 10 %>
                                </div>

                                <div class="field form-group">
                                    <%= f.text_field :seller_name, class: 'form-control', placeholder: 'Enter Seller Name', maxlength: 10,minlenght: 10 %>
                                </div>

                                 <div class="field form-group">
                                    <%= f.text_field :address, class: 'form-control', placeholder: 'Enter address', maxlength: 10,minlenght: 10 %>
                                </div>

                                <div class="field form-group">
                                    <%= f.text_field :gst_no, class: 'form-control', placeholder: 'Enter GST No', maxlength: 10,minlenght: 10 %>
                                </div>

                            </div>

                            <div class="col-md-6">
                               
                                <div class="field form-group">
                                    <%= f.select :seller_type, options_for_select([['Select Seller Type',''],'Wholeseller', 'Retailer']),{}, class: 'form-control' %>
                                </div>

                                <div class="field form-group">
                                    <%= f.text_field :delivery_charge, class: 'form-control', placeholder: 'Enter Delivery Charge', maxlength: 10,minlenght: 10 %>
                                </div>

                                <div class="field form-group">
                                    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'Enter Password ( characters minimum )' %>
                                </div>

                                <div class="field form-group">
                                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Confirmation Password' %>
                                </div>
                            </div>
                            
                            <div class="actions">
                                <%= f.submit "Sign up", class: 'btn btn-success btn-margin' %>
                            </div>

                        <div>

                        
                    <% end %>

                </div>
                
            </div>
            <div class="text-center form-group">
                <%= render "devise/shared/links" %>
            </div>

            <div class="col-md-3">
            </div>

        </div>
    </div>
</div>





