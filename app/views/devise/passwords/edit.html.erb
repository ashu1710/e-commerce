<div class="container">
    <div class="row">
        <div class="col-md-4">
        </div>

        <div class="col-md-4 login-div">

            <h4 class='text-center'>Change your password</h4>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="field form-group">
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control', placeholder: 'New Password (6 characters minimum' %>
            </div>

            <div class="field form-group">
                <%= f.password_field :password_confirmation, autocomplete: "off",class: 'form-control', placeholder: 'Confirm New Password' %>
            </div>

            <div class="actions">
                <%= f.submit "Change Password", class: 'btn btn-success' %>
            </div>
            <% end %>


            <div class="for-margin-sign-up-link">
                <%= link_to "Log in", new_session_path(resource_name) %><br />
            </div>

        </div>
        <div class="col-md-4">
        </div>
    </div>
</div>


