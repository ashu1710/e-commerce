<%= form_for( @product_size , remote: true) do |f| %>
    
    <div class="form-group">
        <%= f.label :product_size %>
        <%= f.text_field :size,class: 'form-control', required: true %>
    </div>
    
    
    <div class="form-group">
        <%= f.submit "Add",class: 'btn btn-success' %>
    </div>
<% end %>