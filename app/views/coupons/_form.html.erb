<%= form_for( @coupon, remote: true) do |f| %>
    
    <div class="form-group">
        <%= f.label :coupon_code %>
        <%= f.text_field :code, class: 'form-control', required: true %>
    </div>
    
    <div class="form-group">
        <%= f.label :valid_from %>
        <%= f.date_field :valid_from, class: 'form-control', required: true %>
    </div>


    <div class="form-group">
        <%= f.label :valid_to %>
        <%= f.date_field :valid_to, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
        <%= f.label :amt_discount %>
        <%= f.text_field :amt_discount, class: 'form-control', required: true %>
    </div>
    
    <div class="form-group">
        <%= f.label :min_amt %>
        <%= f.text_field :min_amt, class: 'form-control', required: true %>
    </div>
    

    <div class="form-group">
        <%= f.submit "Add",class: 'btn btn-success' %>
    </div>
<% end %>