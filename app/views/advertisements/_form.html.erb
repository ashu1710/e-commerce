<%= form_for( @advertisement, remote: true) do |f| %>
    
    <div class="form-group">
        <%= f.label :user_email %>
        <%= f.select :user_id, options_from_collection_for_select(@users, "id", "email"), {  prompt: "Select Users" }, class: "form-control", required: true %>
    </div>

    <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class: 'form-control', required: true %>
    </div>
    
    <div class="form-group">
        <%= f.label :start_date %>
        <%= f.date_field :start_date, class: 'form-control', required: true %>
    </div>


    <div class="form-group">
        <%= f.label :end_date %>
        <%= f.date_field :end_date, class: 'form-control', required: true %>
    </div>
    
    <div class="form-group">
        <%= f.submit "Add",class: 'btn btn-success' %>
    </div>
<% end %>